
<div class="listing">
  <center><h1>{{model.title}}</h1></center>
  <br>
  <p>  Body: {{model.details}} </p>

  <p>Date added: {{format-date model.date_added}}</p>

  {{#if model.hasImage}}

  <p><img class="listing-image" src="{{model.image}}"></p>
  {{else}}
  <p>What</p>
  {{/if}}

  {{#link-to 'category' model.category.id}}Back to {{model.category.name}}{{/link-to}}
</div>

{{google-map model=model}}

